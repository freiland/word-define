<h1>Update <%= @words.name() %></h1>

<form action="/words/<%= @words.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">re-enter a word</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update</button>
</form>

<p><a href="/words">return to word list</a></p>

<form action="/words/<%= @words.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">delete a word</button>
</form>