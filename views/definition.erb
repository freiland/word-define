<h2>definition: <%= @definitions.name %></h2>
<h3>word: <%= @definitions.word.name %></h3>

<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">re-enter your word definition:</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update</button>
</form>

<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="post">

  <button type="submit">delete a definition</button>
</form>

<a href="/albums/<%= @definition.word.id %>">back to <%= @definitions.word.name %></a>